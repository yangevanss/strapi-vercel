{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "public/**", "use": "@vercel/static", "config": { "distDir": "public" } },
    { "src": "server/*.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/server/index.js"
    }
  ]
}
